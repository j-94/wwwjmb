---
import { Picture } from "astro:assets";
import heroImage from "../assets/hero-screenshot.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
import Contactform from "@components/contactform.astro"; // Ensure the contact form component is correctly imported
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-12 place-items-center relative gap-y-8 lg:gap-y-0">
      
      <!-- Gradient Background Blobs -->
      <div class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0"></div>
      <div class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10"></div>

      <!-- Hero Text and CTA Buttons -->
      <div class="z-10 col-span-full lg:col-span-5 xl:col-span-4">
        <h1 class="text-4xl font-bold tracking-tight text-center lg:text-left">
          Reliable Flooring Across Every Corner of London
        </h1>
        <p class="mt-4 text-slate-600 text-center lg:text-left">
          Discover unparalleled flooring services with JMB Floors. Dedication, quality, and customer satisfaction are our promises to you.
        </p>
        <div class="mt-6 flex flex-col sm:flex-row justify-center lg:justify-start gap-3">
          <Link href="/services" class="btn btn-primary">Our Services</Link>
          <Link href="/contact" class="btn btn-outline">Contact Us</Link>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="col-span-full lg:col-span-5 xl:col-span-4 py-3 lg:py-0 lg:-mr-44">
        <Picture
          src={heroImage}
          alt="JMB Floors Hero"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          widths={[240, 540, 720, 960]}
          loading="eager"
          fetchpriority="high"
          class="rounded-xl shadow-lg"
        />
      </div>

      <!-- Contact Form -->
      <div class="col-span-full lg:col-span-2 xl:col-span-4 z-10 bg-white p-6 rounded-xl shadow-lg">
        <Contactform />
      </div>
    </main>
  </Container>
</div>
